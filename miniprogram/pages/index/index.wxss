.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background: #313132;
  padding: 0 1rem;
}

._logo-box {
  background: rgba(255,255,255, 0.1);
  padding: .8rem;
  margin: 1rem 0;
  border-radius: .5rem;
  width: 15rem;
  height: 15rem;
}

._logo-box image {
  width: 100%;
  height: 100%;
  border-radius: .5rem;
}

._title-box {
  width: 100%;
  color: #fbfbfd;
  margin-bottom: 2rem;
}

._icon-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

._progress-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 1rem 0;
}

._progress-box ._progress {
  display: flex;
  flex-direction: column;
  width: 100%;
}

._progress-box ._progress ._time-box {
  display: flex;
  justify-content: space-between;
  font-size: .5rem;
  color: #fbfbfd;
  padding: 0 1rem;
}

._opt-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2rem;
}

._opt-box ._opt-audio {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

._detail-box {
  background: rgb(255 255 255 / 0.1);
  color: #fbfbfd;
  border-radius: .5rem;
  padding: 1rem;
  width: calc(100% - 2rem);
}

._comments-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 1rem 0;
}

._comments-box .title {
  font-size: 1rem;
  color: #fbfbfd;
}

._footer-box {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 3rem;
  color: #fbfbfd;
  background: #464647;
  padding-bottom: env(safe-area-inset-bottom);
  bottom: 0;
}

._footer-box ._input {
  width: 50%;
  background: #5e5e5e;
  padding: 5px 10px;
  border-radius: 1rem;
  font-size: .8rem;
}

._footer-box .opt {
  width: 30%;
  display: flex;
  justify-content: space-evenly;
}